<div class="row" style="margin-top: 100px;">
  <div class="col m8 offset-m2">
    <%= devise_error_messages! %>
  </div>

  <%= form_for(current_user, url: registration_path(current_user), html: { method: :put }) do |f| %>
    <div class="col m4 offset-m2">
      <div class="card">
        <div class="card-content">
          <%= render 'profile/basic_info' %>

          <%= render 'profile/change_email', f: f %>

          <%= render 'profile/change_password', f: f %>

          <h5>Confirm Changes</h5>
          <p>Please enter your current password to confirm your changes.</p>

          <div class="input-field">
            <%= f.password_field :current_password,
              autocomplete: "off",
              required: true,
              data: { errors: current_user.errors[:current_password].join(", ") }  %>
            <%= f.label :current_password %>
          </div>

          <%= f.submit "Update", class: 'btn btn-block', style: "width: 100%;" %>
        </div>
      </div>
    </div>
  <% end %>

  <div class="col m4">
    <div class="card">
      <div class="card-content">
        <%= render 'profile/delete_account' %>
      </div>
    </div>
  </div>
</div>

<% if current_user.errors.any? %>
  <script>
    showErrorMessage("Please fix the errors in the form.");
  </script>
<% end %>
