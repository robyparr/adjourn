<div class="card">
  <div class="card-content">
    <div class="row">

      <%# Profile Picure %>
      <div class="col m4">
        <img src="<%= gravatar_url(current_user.email, 128) %>" class="circle" />
      </div>

      <%# Email and profile explaination %>
      <div class="col m8">
        <span class="card-title"><%= current_user.email %></span>
        <small>
          Adjourn automatically pulls profile pictures from the
          Gravatar service.<br />
          Click <%= link_to "here", "https://en.gravatar.com/emails/" %> 
          to change your profile picture.
        </small>
      </div>
    </div> <%# /.row %>
    <div class="row margin-bottom-none">
      <div class="col m12">
        <%= link_to "Edit Profile", edit_user_registration_path, class: "btn btn-block" %>
      </div>
    </div> <%# /.row %>
  </div> <%# /.card-content %>
</div>