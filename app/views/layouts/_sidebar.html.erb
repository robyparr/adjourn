<div class="sidebar-overlay">&nbsp;</div>

<div class="sidebar">
  <%= link_to root_url, class: "header" do %>
    <div class="icon">
      <%= image_tag 'icon.png' %>
    </div>
    <div class="text">Adjourn</div>
  <% end %>

  <%= link_to profile_path, class: 'user-info' do %>
    <img src="<%= gravatar_url(current_user.email) %>"
      class="circle profile-picture" />
    <div class="email"><%= current_user.email %></div>
  <% end %>

  <%# Search bar formatting help from https://stackoverflow.com/a/42127640 %>
  <%= form_with(url: search_path, method: 'get', class: 'search') do |f| %>
    <i class="material-icons prefix" style="z-index: 9;">search</i>
    <%= f.search_field :q,
      class: 'autocomplete',
      autocomplete: 'off',
      placeholder: 'Search' %>
  <% end %>

  <ul class="links">
    <li>
      <%= active_link_to meetings_url, active: [['meetings'], []] do %>
        <i class="small material-icons icon">assignment</i>
        <span class="text">Meetings</span>
      <% end %>
    </li>
    <li>
      <%= active_link_to uploads_url do %>
        <i class="small material-icons icon">attach_file</i>
        <span class="text">Uploads</span>
      <% end %>
    </li>
    <li>
      <%= active_link_to profile_path do %>
        <i class="small material-icons icon">account_box</i>
        <span class="text">My Profile</span>
      <% end %>
    </li>
    <li>
      <%= active_link_to google_accounts_path do %>
        <i class="small material-icons icon">sync</i>
        <span class="text">Google Accounts</span>
      <% end %>
    </li>
  </ul>

  <ul class="links bottom">
    <li class="hidden md:block">
      <a class="collapse-button">
        <i class="small material-icons collapse">chevron_left</i>
        <i class="small material-icons expand">chevron_right</i>
      </a>
    </li>
    <li>
      <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "sign-out-link" %>
    </li>
  </ul>
</div>